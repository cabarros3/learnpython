# sorteador

# inserindo o nome dos concorrentes ao sorteio
concorrentes = []
count = 1

while count <= 6:
  concorrentes.append(str(input(f'Digite o nome do concorrente {count}: ')))
  count += 1
  if count == 6:
    break

#sorteando
sorteio = random.choice(concorrentes)

print('=-=' * 15)
print(f'Os participantes do sorteio foram: {concorrentes[0]}, {concorrentes[1]}, {concorrentes[2]}, {concorrentes[3]}, {concorrentes[4]}')
print(f'O sorteado foi: {sorteio}')
print('=-=' * 15)
